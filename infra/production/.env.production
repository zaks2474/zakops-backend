# ZakOps Production Configuration
# DO NOT COMMIT WITH REAL VALUES
# Copy to .env and fill in actual values

# Application
APP_ENV=production
DEBUG=false
LOG_LEVEL=INFO

# Authentication
AUTH_REQUIRED=true
SESSION_SECRET=CHANGE_ME_IN_PRODUCTION_32_RANDOM_BYTES
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=strict
SESSION_EXPIRY_HOURS=24

# Database
DATABASE_URL=postgresql://user:password@host:5432/zakops
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10
DATABASE_BACKEND=postgresql

# Redis (for session/cache)
REDIS_URL=redis://localhost:6379/0

# CORS
CORS_ORIGINS=["https://app.zakops.com"]
CORS_ALLOW_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_AUTH_REQUESTS_PER_MINUTE=10

# SSE Configuration
SSE_MAX_CONNECTIONS=1000
SSE_MAX_CONNECTIONS_PER_USER=5
SSE_HEARTBEAT_INTERVAL=30
SSE_EVENT_REPLAY_HOURS=1

# Outbox Configuration
OUTBOX_ENABLED=true
OUTBOX_MAX_ATTEMPTS=5
OUTBOX_BASE_BACKOFF_SECONDS=5
OUTBOX_MAX_BACKOFF_SECONDS=300
OUTBOX_POLL_INTERVAL=1.0
OUTBOX_BATCH_SIZE=100

# Artifact Storage
ARTIFACT_STORAGE_BACKEND=s3
ARTIFACT_S3_BUCKET=zakops-artifacts
ARTIFACT_S3_REGION=us-east-1
# AWS_ACCESS_KEY_ID and AWS_SECRET_ACCESS_KEY should be set via IAM role or secrets manager

# LangSmith (Agent)
LANGSMITH_API_KEY=CHANGE_ME
LANGSMITH_PROJECT=zakops-production

# Monitoring
OTEL_ENABLED=true
OTEL_EXPORTER_OTLP_ENDPOINT=http://otel-collector:4317
OTEL_SERVICE_NAME=zakops-backend
